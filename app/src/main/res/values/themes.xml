<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meishi" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Meishi.Button">
        <item name="colorPrimary">@color/red_holer</item>
    </style>
    <style name="Theme.Meishi.Bottom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_all</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>
    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupTheme">@style/Theme.Meishi.Ob</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>
    <style name="ToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">@color/textColorPrimary</item>
    </style>
    <style name="Theme.Meishi.Ob">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>

        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <color name="textColorPrimary2">#e6e6e6</color>
    <color name="textColorPrimary">#000000</color>
    <style name="toolbar_title">

        <item name="android:textSize">24sp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="XUIAPPTheme" parent="XUITheme.Phone">
        <!-- 自定义自己的主题样式 -->
        <item name="colorPrimary">@color/pink_all</item>
        <item name="colorPrimaryDark">@color/pink_all</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
</resources>